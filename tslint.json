/*******   Common Mixins   */
full-pane()
  width 100%
  height 100%


/*******   Global Rules   */
*
  font-family 'Cabin', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

html
body
  full-pane()
  overflow hidden
  margin 0

body
  background rgb(150,200,255) url("../assets/img/background_login.png") no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover


router-outlet + *
  full-pane()

textarea[disabled]
  resize none

